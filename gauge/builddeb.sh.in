#!/bin/bash

source /etc/os-release

if [ "$ID" == "fedora" ] || [ "$ID" == "centos" ] || [ "$ID" == "rhel" ] || [ "$ID" == "suse" ]
then
	echo "Use buildrpm.sh to build on rpm based distributions"
	exit 1
fi

ORIGPWD=$PWD
rm -f @PACKAGE@-@VERSION@.tar.bz2
make dist-bzip2

cd ..
rm -rf @PACKAGE@*@VERSION@*
tar xjf $ORIGPWD/@PACKAGE@-@VERSION@.tar.bz2
cd @PACKAGE@-@VERSION@

cp -r $ORIGPWD/debian .
dpkg-buildpackage

